<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca - Catálogo de Livros</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .book-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }
        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .availability-badge {
            font-size: 0.85rem;
            padding: 0.35em 0.65em;
        }
        .navbar-brand {
            font-weight: 600;
        }
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 1rem 1rem;
        }
        .footer {
            background-color: #f8f9fa;
            padding: 2rem 0;
            margin-top: 3rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <i class="bi bi-book-half"></i> Biblioteca Ativa
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/livros">
                            <i class="bi bi-book"></i> Catálogo
                        </a>
                    </li>
                    <% if (user && user.role === 'admin') { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/livros/acervo">
                            <i class="bi bi-archive"></i> Acervo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/livros/adicionar">
                            <i class="bi bi-plus-circle"></i> Adicionar Livro
                        </a>
                    </li>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= user.nome %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><span class="dropdown-item-text">Tipo: <%= user.role %></span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">
                                <i class="bi bi-box-arrow-right"></i> Sair
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container text-center">
            <h1 class="display-4 fw-bold">
                <i class="bi bi-book"></i> Catálogo de Livros
            </h1>
            <p class="lead">Explore nossa coleção de livros disponíveis</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <!-- Alertas -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Filtros e Estatísticas -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-info-circle"></i> Estatísticas
                        </h5>
                        <p class="card-text">
                            Total de livros: <span class="badge bg-primary"><%= livros.length %></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-search"></i> Buscar Livros
                        </h5>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Título, autor ou categoria..." id="searchInput">
                            <button class="btn btn-outline-secondary" type="button" onclick="filterBooks()">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grid de Livros -->
        <div class="row" id="booksContainer">
            <% if (livros.length === 0) { %>
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle display-4 d-block mb-3"></i>
                        <h4>Nenhum livro cadastrado no sistema</h4>
                        <p class="mb-0">Aguardando novos livros serem adicionados ao acervo.</p>
                        <% if (user && user.role === 'admin') { %>
                            <a href="/livros/adicionar" class="btn btn-primary mt-3">
                                <i class="bi bi-plus-circle"></i> Adicionar Primeiro Livro
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } else { %>
                <% livros.forEach(livro => { %>
                    <div class="col-xl-4 col-lg-6 col-md-6 mb-4 book-item">
                        <div class="card book-card h-100">
                            <div class="card-header">
                                <span class="badge <%= livro.disponivel ? 'bg-success' : 'bg-danger' %> availability-badge">
                                    <i class="bi <%= livro.disponivel ? 'bi-check-circle' : 'bi-x-circle' %>"></i>
                                    <%= livro.disponivel ? 'Disponível' : 'Indisponível' %>
                                </span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-primary"><%= livro.titulo %></h5>
                                <h6 class="card-subtitle mb-3 text-muted">
                                    <i class="bi bi-person"></i> <%= livro.autor %>
                                </h6>
                                <div class="book-details">
                                    <p class="card-text">
                                        <strong><i class="bi bi-calendar"></i> Ano:</strong> <%= livro.ano %>
                                    </p>
                                    <p class="card-text">
                                        <strong><i class="bi bi-tag"></i> Categoria:</strong> 
                                        <span class="badge bg-secondary"><%= livro.categoria %></span>
                                    </p>
                                </div>
                            </div>
                            <% if (user && user.role === 'admin') { %>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between">
                                        <a href="/livros/editar/<%= livro.id %>" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-book"></i> Biblioteca Ativa</h5>
                    <p>Sistema de gerenciamento de acervo bibliográfico</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>&copy; 2024 Biblioteca Ativa. Todos os direitos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS e Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Script de busca -->
    <script>
        function filterBooks() {
            const searchText = document.getElementById('searchInput').value.toLowerCase();
            const books = document.querySelectorAll('.book-item');
            
            books.forEach(book => {
                const title = book.querySelector('.card-title').textContent.toLowerCase();
                const author = book.querySelector('.card-subtitle').textContent.toLowerCase();
                const category = book.querySelector('.badge.bg-secondary').textContent.toLowerCase();
                
                if (title.includes(searchText) || author.includes(searchText) || category.includes(searchText)) {
                    book.style.display = 'block';
                } else {
                    book.style.display = 'none';
                }
            });
        }

        // Busca ao digitar
        document.getElementById('searchInput').addEventListener('keyup', filterBooks);
    </script>
</body>
</html>