<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catálogo - Biblioteca Ativa</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/catalogo.css">
</head>
</body>
    <header class="header">
        <div class="header-container">
            <a href="/home" class="logo">
                <i class="fas fa-book-open"></i> Biblioteca Ativa
            </a>
            
            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
            
            <ul class="nav-menu">
                <li><a href="/home" class="nav-link">Home</a></li>
                <li><a href="/catalogo" class="nav-link active">Catálogo</a></li>
                <% if (user && user.role === 'admin') { %>
                <li><a href="/catalogo/acervo" class="nav-link">Acervo</a></li>
                <li><a href="/catalogo/adicionar" class="nav-link">Adicionar Livro</a></li>
                <% } %>
            </ul>
            
            <div class="user-menu">
                <a class="user-avatar" href="/perfil">
                    <%= user.nome.charAt(0).toUpperCase() %>
                </a>
                <span><%= user.nome %></span>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="container">
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">Catálogo de Livros</h1>
                <p class="page-subtitle">Explore nossa coleção completa</p>
            </div>

            <!-- Stats and Search -->
            <div class="tools-grid">
                <div class="stat-card">
                    <h3>Total de Livros</h3>
                    <div class="stat-value"><%= livros.length %></div>
                    <p>Disponíveis no acervo</p>
                </div>
                
                <div class="search-card">
                    <h3>Buscar Livros</h3>
                    <div class="search-form">
                        <input type="text" class="search-input" placeholder="Título, autor ou categoria..." id="searchInput">
                        <button class="search-btn" onclick="filterBooks()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Books Grid -->
            <div class="books-grid" id="booksContainer">
                <% if (livros.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3 class="empty-title">Nenhum livro encontrado</h3>
                        <p class="empty-text">Aguardando novos livros serem adicionados ao acervo.</p>
                        <% if (user && user.role === 'admin') { %>
                            <a href="/catalogo/adicionar" class="btn-edit">
                                <i class="fas fa-plus"></i> Adicionar Primeiro Livro
                            </a>
                        <% } %>
                    </div>
                <% } else { %>
                    <% livros.forEach(livro => { %>
                        <div class="book-card book-item">
                            <div class="book-header">
                                <span class="book-badge <%= livro.disponivel ? 'badge-available' : 'badge-unavailable' %>">
                                    <%= livro.disponivel ? 'Disponível' : 'Indisponível' %>
                                </span>
                            </div>
                            
                            <div class="book-body">
                                <div class="book-cover">
                                    <img src="<%= livro.capa_url || '/img/capa-padrao.png' %>" alt="Capa do Livro">
                                </div>
                                <h3 class="book-title"><%= livro.titulo %></h3>
                                <div class="book-author">
                                    <i class="fas fa-user"></i> <%= livro.autor %>
                                </div>
                                
                                <div class="book-details">
                                    <div class="book-detail">
                                        <i class="fas fa-calendar"></i> Ano: <%= livro.ano %>
                                    </div>
                                    <div class="book-detail">
                                        <i class="fas fa-tag"></i> Categoria: <%= livro.categoria %>
                                    </div>
                                </div>
                            </div>
                            
                            
                                <div class="book-footer">
                                    <a href="/catalogo/detalhes/<%= livro.id %>" class="btn-view">
                                        <i class="fas fa-eye"></i> Ver Detalhes
                                    </a>
                                    <% if (user && user.role === 'admin') { %>
                                    <a href="/catalogo/editar/<%= livro.id %>" class="btn-edit">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-brand">Biblioteca Ativa</div>
            <div class="footer-copyright">&copy; 2024 - Todos os direitos reservados</div>
        </div>
    </footer>
    <script src="/js/catalogo.js"></script>
</body>
</html>
