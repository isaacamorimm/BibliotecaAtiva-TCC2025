<%- include('partials/header', { 
    title: 'Catalogo - Biblioteca Ativa', 
    activePage: 'catalogo',
    cssFile: 'catalogo.css',
}) %>
            <div class="page-header">
                <h1 class="page-title">Catálogo de Livros</h1>
                <p class="page-subtitle">Explore nossa coleção completa</p>
            </div>

            <!-- Stats and Search -->
            <div class="tools-grid">
                <div class="stat-card card">
                    <h3>Total de Livros</h3>
                    <div class="stat-value"><%= livros.length %></div>
                    <p>Disponíveis no acervo</p>
                </div>
                
                <div class="search-card card">
                    <h3>Buscar Livros</h3>
                    <div class="search-form">
                        <input type="text" class="search-input" placeholder="Título, autor ou categoria..." id="searchInput">
                        <button class="search-btn" onclick="filterBooks()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Books Grid -->
            <div class="books-grid" id="booksContainer">
                <% if (livros.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h3 class="empty-title">Nenhum livro encontrado</h3>
                        <p class="empty-text">Aguardando novos livros serem adicionados ao acervo.</p>
                        <% if (user && user.role === 'admin') { %>
                            <a href="/catalogo/adicionar" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Adicionar Primeiro Livro
                            </a>
                        <% } %>
                    </div>
                <% } else { %>
                    <% livros.forEach(livro => { %>
                        <div class="book-card book-item">
                            <div class="book-header">
                                <span class="book-badge <%= livro.quantidade_disponivel > 0 ? 'badge-available' : 'badge-unavailable' %>">
                                    <i class="bi <%= livro.quantidade_disponivel > 0 ? 'bi-check-circle' : 'bi-x-circle' %>"></i>
                                    <%= livro.quantidade_disponivel > 0 ? 'Disponível' : 'Indisponível' %>
                                </span>
                            </div>
                            
                            <div class="book-body">
                                <div class="book-cover">
                                    <img src="<%= livro.capa_url || '/img/capa-padrao.png' %>" alt="Capa do Livro">
                                </div>
                                <h3 class="book-title"><%= livro.titulo %></h3>
                                <div class="book-author">
                                    <i class="fas fa-user"></i> <%= livro.autor %>
                                </div>
                                
                                <div class="book-details">
                                    <div class="book-detail">
                                        <i class="fas fa-calendar"></i> Ano: <%= livro.ano %>
                                    </div>
                                    <div class="book-detail">
                                        <i class="fas fa-tag"></i> Categoria: <%= livro.categoria %>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="book-footer">
                                <a href="/catalogo/detalhes/<%= livro.id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> Ver Detalhes
                                </a>
                                <% if (user && user.role === 'admin') { %>
                                <a href="/catalogo/editar/<%= livro.id %>" class="btn btn-secondary">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>
   <%- include('partials/footer') %>