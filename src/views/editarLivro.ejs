<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Livro - Biblioteca Ativa</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 1rem 1rem;
        }
        .form-container {
            max-width: 600px;
            margin: 0 auto;
        }
        .card {
            border: none;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border-radius: 1rem;
        }
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
            transform: translateY(-2px);
        }
        .book-info {
            background-color: #f8f9fa;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <i class="bi bi-book-half"></i> Biblioteca Ativa
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/home">
                            <i class="bi bi-house"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/livros">
                            <i class="bi bi-book"></i> Catálogo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/livros/acervo">
                            <i class="bi bi-archive"></i> Acervo
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/livros/adicionar">
                            <i class="bi bi-plus-circle"></i> Adicionar Livro
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="bi bi-pencil"></i> Editar Livro
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= user.nome %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><span class="dropdown-item-text">Tipo: <%= user.role %></span></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/logout">
                                <i class="bi bi-box-arrow-right"></i> Sair
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container text-center">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-pencil"></i> Editar Livro
            </h1>
            <p class="lead">Atualize as informações do livro</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <div class="form-container">
            <!-- Alertas -->
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> 
                    <strong>Erro:</strong> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Informações do Livro -->
            <div class="book-info mb-4">
                <h5 class="mb-3">
                    <i class="bi bi-info-circle"></i> Informações Atuais
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>ID:</strong> #<%= livro.id %></p>
                        <p><strong>Status:</strong> 
                            <span class="badge <%= livro.publicado ? 'bg-success' : 'bg-secondary' %>">
                                <%= livro.publicado ? 'Publicado' : 'No Acervo' %>
                            </span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Disponibilidade:</strong> 
                            <span class="badge <%= livro.disponivel ? 'bg-success' : 'bg-danger' %>">
                                <%= livro.disponivel ? 'Disponível' : 'Indisponível' %>
                            </span>
                        </p>
                        <p><strong>Última atualização:</strong> 
                            <%= livro.updatedAt ? new Date(livro.updatedAt).toLocaleDateString('pt-BR') : 'N/A' %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Formulário -->
            <div class="card">
                <div class="card-body p-4">
                    <form action="/livros/editar/<%= livro.id %>" method="POST">
                        <!-- Título -->
                        <div class="mb-3">
                            <label for="titulo" class="form-label">
                                <i class="bi bi-bookmark"></i> Título *
                            </label>
                            <input type="text" class="form-control form-control-lg" id="titulo" name="titulo" 
                                   value="<%= livro.titulo %>" required>
                            <div class="form-text">Título completo do livro</div>
                        </div>

                        <!-- Autor -->
                        <div class="mb-3">
                            <label for="autor" class="form-label">
                                <i class="bi bi-person"></i> Autor *
                            </label>
                            <input type="text" class="form-control form-control-lg" id="autor" name="autor" 
                                   value="<%= livro.autor %>" required>
                            <div class="form-text">Nome completo do autor</div>
                        </div>

                        <!-- Ano e Categoria em linha -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="ano" class="form-label">
                                    <i class="bi bi-calendar"></i> Ano de Publicação *
                                </label>
                                <input type="number" class="form-control" id="ano" name="ano" 
                                       value="<%= livro.ano %>" min="1450" max="<%= new Date().getFullYear() %>" required>
                                <div class="form-text">Ano de publicação original</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="categoria" class="form-label">
                                    <i class="bi bi-tag"></i> Categoria *
                                </label>
                                <input type="text" class="form-control" id="categoria" name="categoria" 
                                       value="<%= livro.categoria %>" required>
                                <div class="form-text">Gênero literário</div>
                            </div>
                        </div>

                        <!-- Checkbox Disponibilidade -->
                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="disponivel" 
                                       name="disponivel" <%= livro.disponivel ? 'checked' : '' %>>
                                <label class="form-check-label" for="disponivel">
                                    <i class="bi bi-check-circle"></i> Disponível para empréstimo
                                </label>
                            </div>
                            <div class="form-text">Desmarque se o livro não estiver disponível para empréstimo</div>
                        </div>

                        <!-- Botões -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="<%= livro.publicado ? '/livros' : '/livros/acervo' %>" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Atualizar Livro
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ações Rápidas -->
            <% if (user && user.role === 'admin') { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-lightning"></i> Ações Rápidas
                    </h5>
                    <div class="d-grid gap-2">
                        <% if (!livro.publicado) { %>
                            <form action="/livros/publicar/<%= livro.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-success w-100 mb-2">
                                    <i class="bi bi-megaphone"></i> Publicar no Catálogo
                                </button>
                            </form>
                        <% } else { %>
                            <form action="/livros/despublicar/<%= livro.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-warning w-100 mb-2" 
                                        onclick="return confirm('Tem certeza que deseja remover este livro do catálogo?')">
                                    <i class="bi bi-arrow-left-circle"></i> Mover para Acervo
                                </button>
                            </form>
                        <% } %>
                        <form action="/livros/remover/<%= livro.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger w-100" 
                                    onclick="return confirm('Tem certeza que deseja remover este livro permanentemente?')">
                                <i class="bi bi-trash"></i> Excluir Permanentemente
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5 py-3 bg-light">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 Biblioteca Ativa. Todos os direitos reservados.</p>
        </div>
    </footer>

    <!-- Bootstrap JS e Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Validação do formulário -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            
            form.addEventListener('submit', function(e) {
                const ano = document.getElementById('ano').value;
                const currentYear = new Date().getFullYear();
                
                if (ano < 1450 || ano > currentYear) {
                    e.preventDefault();
                    alert('O ano deve estar entre 1450 e ' + currentYear);
                    return false;
                }
            });
        });
    </script>
</body>
</html>