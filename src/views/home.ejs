<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Ativa - Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <a class="nav-brand" href="/home">
                Biblioteca Ativa
            </a>
            <button class="nav-toggle" type="button">
                <span>☰</span>
            </button>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a class="nav-link active" href="/home">
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/livros">
                        Catálogo
                    </a>
                </li>
                <% if (user && user.role === 'admin') { %>
                <li class="nav-item">
                    <a class="nav-link" href="/livros/acervo">
                        Acervo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/livros/adicionar">
                        Adicionar Livro
                    </a>
                </li>
                <% } %>
                <li class="nav-item">
                    <a class="nav-link" href="#" role="button">
                        <%= user.nome %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><span>Função: <%= user.role %></span></li>
                        <li><span>Email: <%= user.email %></span></li>
                        <li class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">
                            Sair
                        </a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">
                Biblioteca Ativa
            </h1>
            <p class="hero-subtitle">Sistema de gerenciamento bibliográfico completo</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <!-- Welcome Message -->
        <div class="row">
            <div class="col-12">
                <div class="card welcome-card">
                    <div class="card-body text-center">
                        <h2 class="card-title">
                            Bem-vindo, <%= user.nome %>!
                        </h2>
                        <p>
                            Você está logado como: <strong><%= user.role %></strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <% if (success) { %>
            <div class="alert alert-success">
                <strong>Sucesso!</strong> <%= success %>
                <button type="button">×</button>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="alert alert-danger">
                <strong>Erro:</strong> <%= error %>
                <button type="button">×</button>
            </div>
        <% } %>

        <!-- Role Specific Content -->
        <% if (user.role === 'admin') { %>
        <div class="row">
            <div class="col-4">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h3>Gestão Completa</h3>
                        <p>Administre todos os aspectos da biblioteca</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h3>Controle Total</h3>
                        <p>Gerencie livros, usuários e empréstimos</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card stats-card">
                    <div class="card-body text-center">
                        <h3>Relatórios</h3>
                        <p>Acesse estatísticas e relatórios detalhados</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">
                            Painel Administrativo
                        </h4>
                        <div class="btn-group">
                            <a class="btn btn-primary" href="/livros" role="button">
                                Ver Todos os Livros
                            </a>
                            <a class="btn btn-success" href="/livros/adicionar" role="button">
                                Adicionar Livro
                            </a>
                            <a class="btn btn-info" href="/livros/acervo" role="button">
                                Gerenciar Acervo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">
                            Explorar Biblioteca
                        </h4>
                        <p>Descubra nosso acervo de livros disponíveis para empréstimo</p>
                        <a class="btn btn-primary" href="/livros" role="button">
                            Explorar Catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Livros em Destaque -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            Livros em Destaque
                        </h4>
                        
                        <div class="books-grid">
                            <% if (livros && livros.length === 0) { %>
                                <div class="col-12">
                                    <div class="alert alert-info text-center">
                                        <h5>Nenhum livro cadastrado no sistema</h5>
                                        <% if (user && user.role === 'admin') { %>
                                            <a href="/livros/adicionar" class="btn btn-primary">
                                                Adicionar Primeiro Livro
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            <% } else { %>
                                <% livros.slice(0, 6).forEach(livro => { %>
                                    <div class="book-card">
                                        <div class="card-body">
                                            <h5 class="book-title"><%= livro.titulo %></h5>
                                            <h6 class="book-author">
                                                <%= livro.autor %>
                                            </h6>
                                            <div class="book-details">
                                                <p class="book-detail">
                                                    <strong>Ano:</strong> <%= livro.ano %>
                                                </p>
                                                <p class="book-detail">
                                                    <strong>Categoria:</strong> 
                                                    <span class="badge badge-secondary"><%= livro.categoria %></span>
                                                </p>
                                                <p class="book-detail">
                                                    <strong>Disponibilidade:</strong> 
                                                    <span class="badge <%= livro.disponivel ? 'badge-success' : 'badge-danger' %>">
                                                        <%= livro.disponivel ? 'Disponível' : 'Indisponível' %>
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>

                        <% if (livros && livros.length > 6) { %>
                            <div class="text-center">
                                <a class="btn btn-outline" href="/livros">
                                    Ver Todos os Livros
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div>
                <h5>Biblioteca Ativa</h5>
                <p>Sistema de gerenciamento de acervo bibliográfico</p>
            </div>
            <div>
                <p>&copy; 2025 Biblioteca Ativa. Todos os direitos reservados.</p>
                <p>Sistema desenvolvido para ETEC</p>
            </div>
        </div>
    </footer>

    <script>
        // Script para o menu toggle em dispositivos móveis
        document.querySelector('.nav-toggle').addEventListener('click', function() {
            document.querySelector('.nav-menu').classList.toggle('show');
        });
    </script>
</body>
</html>
