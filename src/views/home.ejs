<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca Ativa - Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #9e4a3c;
            --primary-light: #c98c67;
            --primary-dark: #7a372b;
            --accent: #ff7e5f;
            --background: #faf7f4;
            --surface: #ffffff;
            --text: #333333;
            --text-light: #777777;
            --error: #e53935;
            --success: #43a047;
            --warning: #ff9800;
            --info: #2196f3;
            --border: #e0e0e0;
            --shadow-sm: 0 2px 8px rgba(0,0,0,0.05);
            --shadow-md: 0 4px 20px rgba(0,0,0,0.1);
            --radius: 12px;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--background);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            color: var(--text);
            line-height: 1.6;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar */
        .navbar {
            background: var(--primary-dark);
            color: white;
            padding: 0.8rem 0;
            box-shadow: var(--shadow-md);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            padding: 0.5rem 0;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            gap: 1.5rem;
            align-items: center;
        }

        .nav-link {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.7rem 1rem;
            border-radius: var(--radius);
            transition: var(--transition);
            font-size: 1rem;
        }

        .nav-link:hover, .nav-link.active {
            background: rgba(255, 255, 255, 0.15);
        }

        .nav-dropdown {
            position: relative;
        }

        .nav-dropdown-toggle {
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            padding: 0.7rem 1rem;
            border-radius: var(--radius);
            transition: var(--transition);
        }

        .nav-dropdown-toggle:hover {
            background: rgba(255, 255, 255, 0.15);
        }

        .dropdown-menu {
            position: absolute;
            right: 0;
            top: 100%;
            background: white;
            border-radius: var(--radius);
            box-shadow: var(--shadow-md);
            min-width: 240px;
            padding: 1rem 0;
            z-index: 1000;
            display: none;
        }

        .nav-dropdown:hover .dropdown-menu {
            display: block;
        }

        .dropdown-item {
            display: block;
            padding: 0.8rem 1.5rem;
            color: var(--text);
            text-decoration: none;
            transition: var(--transition);
            font-size: 0.95rem;
        }

        .dropdown-item:hover {
            background: var(--background);
        }

        .dropdown-divider {
            height: 1px;
            background: var(--border);
            margin: 0.8rem 0;
        }

        /* Mobile menu button */
        .menu-toggle {
            display: none;
            flex-direction: column;
            justify-content: space-between;
            width: 32px;
            height: 24px;
            background: transparent;
            border: none;
            cursor: pointer;
        }

        .menu-toggle span {
            height: 3px;
            width: 100%;
            background-color: white;
            border-radius: 3px;
            transition: var(--transition);
        }

        /* Hero Section */
        .hero-section {
            background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
            text-align: center;
        }

        .hero-title {
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 1.2rem;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.3rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.5;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            width: 100%;
        }

        /* Grid System */
        .row {
            display: flex;
            flex-wrap: wrap;
            margin: 0 -1rem;
        }

        .col {
            flex: 1;
            padding: 0 1rem;
        }

        .col-12 {
            flex: 0 0 100%;
            max-width: 100%;
            padding: 0 1rem;
        }

        @media (min-width: 768px) {
            .col-md-4 {
                flex: 0 0 33.333333%;
                max-width: 33.333333%;
            }
            .col-md-6 {
                flex: 0 0 50%;
                max-width: 50%;
            }
        }

        @media (min-width: 992px) {
            .col-lg-4 {
                flex: 0 0 33.333333%;
                max-width: 33.333333%;
            }
            .col-lg-6 {
                flex: 0 0 50%;
                max-width: 50%;
            }
        }

        /* Cards */
        .card {
            background: var(--surface);
            border-radius: var(--radius);
            box-shadow: var(--shadow-sm);
            margin-bottom: 2rem;
            overflow: hidden;
            transition: var(--transition);
            height: 100%;
        }

        .card:hover {
            box-shadow: var(--shadow-md);
        }

        .card-body {
            padding: 2rem;
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 1.2rem;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.8rem;
            line-height: 1.3;
        }

        .card-text {
            margin-bottom: 1.5rem;
            line-height: 1.6;
            color: var(--text);
        }

        /* Stats Cards */
        .stats-card {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
            color: white;
            text-align: center;
            height: 100%;
            padding: 2rem 1.5rem;
        }

        .stats-card h3 {
            font-size: 1.4rem;
            margin: 1rem 0;
        }

        .stats-card p {
            opacity: 0.9;
        }

        .welcome-card {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            color: var(--text);
            text-align: center;
            padding: 2.5rem 2rem;
        }

        .feature-icon {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
        }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
            padding: 1rem 2rem;
            background: var(--primary);
            color: white;
            text-decoration: none;
            border-radius: var(--radius);
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            font-size: 1.05rem;
        }

        .btn:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(158, 74, 60, 0.25);
        }

        .btn-lg {
            padding: 1.2rem 2.5rem;
            font-size: 1.1rem;
        }

        .btn-outline {
            background: transparent;
            border: 2px solid var(--primary);
            color: var(--primary);
        }

        .btn-outline:hover {
            background: var(--primary);
            color: white;
        }

        .btn-group {
            display: flex;
            gap: 1.2rem;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 2rem;
        }

        /* Alerts */
        .alert {
            padding: 1.2rem 1.8rem;
            border-radius: var(--radius);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .alert-success {
            background: #e8f5e9;
            color: var(--success);
            border: 1px solid #c8e6c9;
        }

        .alert-error {
            background: #ffebee;
            color: var(--error);
            border: 1px solid #ffcdd2;
        }

        .alert-info {
            background: #e3f2fd;
            color: var(--info);
            border: 1px solid #bbdefb;
        }

        .alert-close {
            margin-left: auto;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.4rem;
            padding: 0;
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: inherit;
        }

        /* Badges */
        .badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .badge-success {
            background: var(--success);
            color: white;
        }

        .badge-error {
            background: var(--error);
            color: white;
        }

        .badge-secondary {
            background: var(--text-light);
            color: white;
        }

        /* Book Card */
        .book-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .book-details p {
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        /* Footer */
        .footer {
            background: var(--primary-dark);
            color: white;
            padding: 3rem 0 2.5rem;
            margin-top: auto;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .footer-col {
            flex: 1;
            min-width: 280px;
            margin-bottom: 2rem;
        }

        .footer h5 {
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .footer p {
            margin-bottom: 0.8rem;
            line-height: 1.5;
        }

        .text-center {
            text-align: center;
        }

        .text-end {
            text-align: right;
        }

        /* ========== RESPONSIVIDADE MOBILE ========== */
        @media (max-width: 768px) {
            .navbar-container {
                padding: 0 1rem;
            }
            
            .menu-toggle {
                display: flex;
            }
            
            .navbar-nav {
                position: fixed;
                top: 64px;
                left: 0;
                width: 100%;
                background: var(--primary-dark);
                flex-direction: column;
                gap: 0;
                padding: 1rem 0;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                display: none;
                max-height: calc(100vh - 64px);
                overflow-y: auto;
            }
            
            .navbar-nav.active {
                display: flex;
            }
            
            .nav-link, .nav-dropdown-toggle {
                width: 100%;
                padding: 1.2rem 1.5rem;
                border-radius: 0;
                justify-content: flex-start;
            }
            
            .dropdown-menu {
                position: static;
                box-shadow: none;
                background: rgba(0,0,0,0.1);
                width: 100%;
                display: none;
                min-width: unset;
            }
            
            .nav-dropdown.active .dropdown-menu {
                display: block;
            }
            
            .dropdown-item {
                padding-left: 2.8rem;
                padding-right: 1.5rem;
            }
            
            .hero-section {
                padding: 2.8rem 1rem;
                margin-bottom: 2rem;
            }
            
            .hero-title {
                font-size: 2.2rem;
                margin-bottom: 1rem;
            }
            
            .hero-subtitle {
                font-size: 1.1rem;
                padding: 0;
            }
            
            .container {
                padding: 0 1rem;
            }
            
            .row {
                margin: 0 -0.5rem;
            }
            
            .col, .col-12, .col-md-4, .col-md-6, .col-lg-4, .col-lg-6 {
                padding: 0 0.5rem;
                flex: 0 0 100%;
                max-width: 100%;
            }
            
            .card-body {
                padding: 1.8rem 1.5rem;
            }
            
            .stats-card, .welcome-card {
                padding: 1.8rem 1.5rem;
            }
            
            .btn-group {
                flex-direction: column;
                width: 100%;
                gap: 1rem;
                margin-top: 1.8rem;
            }
            
            .btn {
                width: 100%;
                justify-content: center;
                text-align: center;
            }
            
            .feature-icon {
                font-size: 2.8rem;
                margin-bottom: 1.2rem;
            }
            
            .card-title {
                font-size: 1.3rem;
            }
            
            .footer {
                padding: 2.5rem 0 2rem;
            }
            
            .footer-container {
                flex-direction: column;
                gap: 1.5rem;
                padding: 0 1rem;
            }
            
            .footer-col {
                min-width: unset;
                margin-bottom: 1.8rem;
            }
            
            .text-end {
                text-align: left;
            }
            
            .alert {
                padding: 1.2rem 1.5rem;
                flex-direction: column;
                text-align: center;
                gap: 0.8rem;
            }
            
            .alert-close {
                margin-left: 0;
                align-self: center;
            }
        }

        /* Utilitários de espaçamento */
        .mb-3 { margin-bottom: 1rem; }
        .mb-4 { margin-bottom: 1.8rem; }
        .mb-5 { margin-bottom: 3rem; }
        .mt-3 { margin-top: 1rem; }
        .mt-4 { margin-top: 1.8rem; }
        .mt-5 { margin-top: 3rem; }
        .px-2 { padding-left: 0.5rem; padding-right: 0.5rem; }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a class="navbar-brand" href="/home">
                <i class="fas fa-book-open"></i> Biblioteca Ativa
            </a>
            
            <button class="menu-toggle" id="menuToggle">
                <span></span>
                <span></span>
                <span></span>
            </button>
            
            <ul class="navbar-nav" id="navbarNav">
                <li>
                    <a class="nav-link active" href="/home">
                        <i class="fas fa-home"></i> Home
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="/livros">
                        <i class="fas fa-book"></i> Catálogo
                    </a>
                </li>
                <% if (user && user.role === 'admin') { %>
                <li>
                    <a class="nav-link" href="/livros/acervo">
                        <i class="fas fa-archive"></i> Acervo
                    </a>
                </li>
                <li>
                    <a class="nav-link" href="/livros/adicionar">
                        <i class="fas fa-plus-circle"></i> Adicionar Livro
                    </a>
                </li>
                <% } %>
                <li class="nav-dropdown">
                    <div class="nav-link nav-dropdown-toggle">
                        <i class="fas fa-user-circle"></i> <%= user.nome %> <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="dropdown-menu">
                        <span class="dropdown-item">Função: <%= user.role %></span>
                        <span class="dropdown-item">Email: <%= user.email %></span>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logout">
                            <i class="fas fa-sign-out-alt"></i> Sair
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">
                <i class="fas fa-book"></i> Biblioteca Ativa
            </h1>
            <p class="hero-subtitle">Sistema de gerenciamento bibliográfico completo</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mb-5">
        <!-- Welcome Message -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card welcome-card">
                    <div class="card-body">
                        <h2 class="card-title">
                            <i class="fas fa-smile"></i> Bem-vindo, <%= user.nome %>!
                        </h2>
                        <p class="card-text">
                            Você está logado como: <strong><%= user.role %></strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        <% if (success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> 
                <div>
                    <strong>Sucesso!</strong> <%= success %>
                </div>
                <button class="alert-close">&times;</button>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i> 
                <div>
                    <strong>Erro:</strong> <%= error %>
                </div>
                <button class="alert-close">&times;</button>
            </div>
        <% } %>

        <!-- Role Specific Content -->
        <% if (user.role === 'admin') { %>
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card stats-card">
                    <div class="card-body">
                        <i class="fas fa-book feature-icon"></i>
                        <h3>Gestão Completa</h3>
                        <p>Administre todos os aspectos da biblioteca</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card stats-card">
                    <div class="card-body">
                        <i class="fas fa-users feature-icon"></i>
                        <h3>Controle Total</h3>
                        <p>Gerencie livros, usuários e empréstimos</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card stats-card">
                    <div class="card-body">
                        <i class="fas fa-chart-line feature-icon"></i>
                        <h3>Relatórios</h3>
                        <p>Acesse estatísticas e relatórios detalhados</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">
                            <i class="fas fa-tools"></i> Painel Administrativo
                        </h4>
                        <div class="btn-group">
                            <a class="btn btn-lg" href="/livros">
                                <i class="fas fa-book"></i> Ver Todos os Livros
                            </a>
                            <a class="btn btn-lg" href="/livros/adicionar">
                                <i class="fas fa-plus-circle"></i> Adicionar Livro
                            </a>
                            <a class="btn btn-lg" href="/livros/acervo">
                                <i class="fas fa-archive"></i> Gerenciar Acervo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">
                            <i class="fas fa-search"></i> Explorar Biblioteca
                        </h4>
                        <p class="card-text">Descubra nosso acervo de livros disponíveis para empréstimo</p>
                        <a class="btn btn-lg" href="/livros">
                            <i class="fas fa-book"></i> Explorar Catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Livros em Destaque -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-star"></i> Livros em Destaque
                        </h4>
                        
                        <div class="row">
                            <% if (livros && livros.length === 0) { %>
                                <div class="col-12">
                                    <div class="alert alert-info text-center">
                                        <i class="fas fa-info-circle" style="font-size: 2.8rem; margin-bottom: 1.2rem;"></i>
                                        <h5>Nenhum livro cadastrado no sistema</h5>
                                        <% if (user && user.role === 'admin') { %>
                                            <a href="/livros/adicionar" class="btn mt-3">
                                                <i class="fas fa-plus-circle"></i> Adicionar Primeiro Livro
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            <% } else { %>
                                <% livros.slice(0, 6).forEach(livro => { %>
                                    <div class="col-lg-4 col-md-6 mb-3">
                                        <div class="card book-card">
                                            <div class="card-body">
                                                <h5 style="color: var(--primary); margin-bottom: 1rem; font-size: 1.3rem;"><%= livro.titulo %></h5>
                                                <h6 style="color: var(--text-light); margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.6rem;">
                                                    <i class="fas fa-user"></i> <%= livro.autor %>
                                                </h6>
                                                <div class="book-details">
                                                    <p>
                                                        <i class="fas fa-calendar"></i> <strong>Ano:</strong> <%= livro.ano %>
                                                    </p>
                                                    <p>
                                                        <i class="fas fa-tag"></i> <strong>Categoria:</strong> 
                                                        <span class="badge badge-secondary"><%= livro.categoria %></span>
                                                    </p>
                                                    <p>
                                                        <strong>Disponibilidade:</strong> 
                                                        <span class="badge <%= livro.disponivel ? 'badge-success' : 'badge-error' %>">
                                                            <i class="fas <%= livro.disponivel ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
                                                            <%= livro.disponivel ? 'Disponível' : 'Indisponível' %>
                                                        </span>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>

                        <% if (livros && livros.length > 6) { %>
                            <div class="text-center mt-4">
                                <a class="btn btn-outline" href="/livros">
                                    <i class="fas fa-arrow-right"></i> Ver Todos os Livros
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-col">
                <h5><i class="fas fa-book"></i> Biblioteca Ativa</h5>
                <p>Sistema de gerenciamento de acervo bibliográfico</p>
            </div>
            <div class="footer-col text-end">
                <p>&copy; 2025 Biblioteca Ativa. Todos os direitos reservados.</p>
                <p>Sistema desenvolvido para ETEC</p>
            </div>
        </div>
    </footer>

    <script>
        // Menu mobile toggle
        document.getElementById('menuToggle').addEventListener('click', function() {
            const navbarNav = document.getElementById('navbarNav');
            navbarNav.classList.toggle('active');
            
            // Animar o ícone do menu hamburguer
            const spans = this.querySelectorAll('span');
            if (navbarNav.classList.contains('active')) {
                spans[0].style.transform = 'rotate(45deg) translate(6px, 6px)';
                spans[1].style.opacity = '0';
                spans[2].style.transform = 'rotate(-45deg) translate(6px, -6px)';
            } else {
                spans[0].style.transform = 'none';
                spans[1].style.opacity = '1';
                spans[2].style.transform = 'none';
            }
        });

        // Dropdown mobile
        document.querySelectorAll('.nav-dropdown-toggle').forEach(toggle => {
            toggle.addEventListener('click', function(e) {
                if (window.innerWidth <= 768) {
                    this.parentElement.classList.toggle('active');
                    e.stopPropagation();
                }
            });
        });

        // Fechar alertas
        document.querySelectorAll('.alert-close').forEach(button => {
            button.addEventListener('click', function() {
                this.closest('.alert').style.display = 'none';
            });
        });

        // Fechar menu ao clicar fora
        document.addEventListener('click', function(e) {
            if (window.innerWidth <= 768) {
                const navbarNav = document.getElementById('navbarNav');
                const menuToggle = document.getElementById('menuToggle');
                
                if (!e.target.closest('.navbar-nav') && !e.target.closest('.menu-toggle') && navbarNav.classList.contains('active')) {
                    navbarNav.classList.remove('active');
                    
                    // Reverter animação do menu hamburguer
                    const spans = menuToggle.querySelectorAll('span');
                    spans[0].style.transform = 'none';
                    spans[1].style.opacity = '1';
                    spans[2].style.transform = 'none';
                }
                
                document.querySelectorAll('.nav-dropdown').forEach(dropdown => {
                    if (!e.target.closest('.nav-dropdown') && dropdown.classList.contains('active')) {
                        dropdown.classList.remove('active');
                    }
                });
            }
        });

        // Prevenir que cliques dentro do menu fechem ele
        document.getElementById('navbarNav').addEventListener('click', function(e) {
            e.stopPropagation();
        });
    </script>
</body>
</html>
